datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  patient
  doctor
  staff
}

model User {
  id             Int       @id @default(autoincrement())
  userId         String    @unique
  username       String    @unique
  email          String    @unique
  password       String    @db.VarChar(255)
  fullName       String
  phone          String?
  birthDate      DateTime?
  address        String?
  chronicDisease String?
  drugAllergy    String?
  foodAllergy    String?
  role           Role      @default(patient)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  patientAppointments Appointment[]     @relation("patient_appointments")
  doctorAppointments  Appointment[]     @relation("doctor_appointments")
  staffAppointments   Appointment[]     @relation("staff_appointments")
  treatmentRecords    TreatmentRecord[] @relation("patient_records")
  doctorRecords       TreatmentRecord[] @relation("doctor_records")
}

model Treatment {
  id          Int      @id @default(autoincrement())
  treatmentId String   @unique
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointments     Appointment[]
  treatmentRecords TreatmentRecord[]
}

model TreatmentRecord {
  id          Int      @id @default(autoincrement())
  recordId    String   @unique
  patientId   Int
  doctorId    Int?
  treatmentId Int
  date        DateTime
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  patient   User      @relation("patient_records", fields: [patientId], references: [id])
  doctor    User?     @relation("doctor_records", fields: [doctorId], references: [id])
  treatment Treatment @relation(fields: [treatmentId], references: [id])

  @@index([patientId])
  @@index([doctorId])
  @@index([treatmentId])
}

model Appointment {
  id          Int      @id @default(autoincrement())
  appointId   String   @unique
  patientId   Int
  doctorId    Int?
  staffId     Int?
  treatmentId Int?
  dateTime    DateTime
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  patient   User       @relation("patient_appointments", fields: [patientId], references: [id])
  doctor    User?      @relation("doctor_appointments", fields: [doctorId], references: [id])
  staff     User?      @relation("staff_appointments", fields: [staffId], references: [id])
  treatment Treatment? @relation(fields: [treatmentId], references: [id])

  @@index([patientId])
  @@index([doctorId])
  @@index([staffId])
  @@index([treatmentId])
}
